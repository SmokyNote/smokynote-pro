<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Styled" parent="Theme.Sherlock.Light">
        <item name="buttonBarStyle">@android:style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@android:style/Widget.Button</item>
        <item name="buttonBarHeight">@dimen/buttonbar_height</item>
    </style>

    <style name="Theme.Styled.DialogLike">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@drawable/dialog_full_holo_light</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>

        <item name="actionBarSize">50dip</item>
        <item name="android:actionBarSize">50dip</item>
        <item name="actionBarStyle">@style/Widget.ActionBar.DialogLike</item>
        <item name="android:actionBarStyle">@style/Widget.ActionBar.DialogLike</item>
        <item name="actionButtonStyle">@style/Widget.ActionButton.DialogLike</item>
        <item name="android:actionButtonStyle">@style/Widget.ActionButton.DialogLike</item>

        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Theme.Styled.NotesList">
        <item name="buttonBarHeight">@dimen/buttonbar_height_large</item>
    </style>
</resources>
